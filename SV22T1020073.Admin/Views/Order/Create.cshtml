@{
    ViewData["Title"] = "Lập đơn hàng";
}

<div class="card card-primary card-outline mb-4">
    <div class="card-header">
        <h3 class="card-title">Lập đơn hàng mới</h3>
    </div>
    <form onsubmit="event.preventDefault()">
        <div class="card-body">
            <!-- Customer Information -->
            <h5 class="mb-3"><i class="bi bi-person-fill"></i> Thông tin khách hàng</h5>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="customerId" class="form-label">Khách hàng: <span class="text-danger">*</span></label>
                        <select class="form-select" id="customerId" name="customerId" required>
                            <option value="">-- Chọn khách hàng --</option>
                            <option value="1">Công ty ABC 1</option>
                            <option value="2">Công ty ABC 2</option>
                            <option value="3">Công ty ABC 3</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="orderDate" class="form-label">Ngày đặt hàng: <span class="text-danger">*</span></label>
                        <input type="date" class="form-control" id="orderDate" name="orderDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" required>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="shipperId" class="form-label">Người giao hàng:</label>
                        <select class="form-select" id="shipperId" name="shipperId">
                            <option value="">-- Chọn người giao hàng --</option>
                            <option value="1">Nguyễn Văn Shipper 1</option>
                            <option value="2">Nguyễn Văn Shipper 2</option>
                            <option value="3">Nguyễn Văn Shipper 3</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="shippingAddress" class="form-label">Địa chỉ giao hàng: <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="shippingAddress" name="shippingAddress" required>
                    </div>
                </div>
            </div>

            <hr>

            <!-- Order Items -->
            <h5 class="mb-3"><i class="bi bi-cart-fill"></i> Chi tiết đơn hàng</h5>
            <div class="table-responsive">
                <table class="table table-bordered" id="orderItemsTable">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 40%;">Sản phẩm</th>
                            <th style="width: 15%;">Đơn giá</th>
                            <th style="width: 15%;">Số lượng</th>
                            <th style="width: 20%;">Thành tiền</th>
                            <th style="width: 10%;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <select class="form-select" name="productId[]" required>
                                    <option value="">-- Chọn sản phẩm --</option>
                                    <option value="1">Sản phẩm 1 - 100,000 VNĐ</option>
                                    <option value="2">Sản phẩm 2 - 200,000 VNĐ</option>
                                    <option value="3">Sản phẩm 3 - 300,000 VNĐ</option>
                                </select>
                            </td>
                            <td>
                                <input type="number" class="form-control" name="price[]" value="0" readonly>
                            </td>
                            <td>
                                <input type="number" class="form-control" name="quantity[]" value="1" min="1" required>
                            </td>
                            <td>
                                <input type="number" class="form-control" name="total[]" value="0" readonly>
                            </td>
                            <td class="text-center">
                                <button type="button" class="btn btn-sm btn-danger" onclick="removeRow(this)">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <button type="button" class="btn btn-sm btn-success mb-3" onclick="addRow()">
                <i class="bi bi-plus-circle"></i> Thêm sản phẩm
            </button>

            <hr>

            <!-- Summary -->
            <div class="row">
                <div class="col-md-8">
                    <div class="mb-3">
                        <label for="notes" class="form-label">Ghi chú:</label>
                        <textarea class="form-control" id="notes" name="notes" rows="3" placeholder="Nhập ghi chú cho đơn hàng..."></textarea>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-light">
                        <div class="card-body">
                            <h6>Tổng kết đơn hàng</h6>
                            <table class="table table-sm mb-0">
                                <tr>
                                    <td>Tổng tiền hàng:</td>
                                    <td class="text-end"><strong id="totalAmount">0 VNĐ</strong></td>
                                </tr>
                                <tr>
                                    <td>Phí vận chuyển:</td>
                                    <td class="text-end">
                                        <input type="number" class="form-control form-control-sm" id="shippingFee" name="shippingFee" value="0" min="0">
                                    </td>
                                </tr>
                                <tr class="table-primary">
                                    <td><strong>Tổng cộng:</strong></td>
                                    <td class="text-end"><strong id="grandTotal">0 VNĐ</strong></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Lưu đơn hàng
            </button>
            <a href="~/Order" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> Hủy bỏ
            </a>
        </div>
    </form>
</div>

<script>
    function addRow() {
        const tbody = document.querySelector('#orderItemsTable tbody');
        const newRow = tbody.rows[0].cloneNode(true);
        tbody.appendChild(newRow);
    }

    function removeRow(btn) {
        const tbody = document.querySelector('#orderItemsTable tbody');
        if (tbody.rows.length > 1) {
            btn.closest('tr').remove();
        }
    }
</script>

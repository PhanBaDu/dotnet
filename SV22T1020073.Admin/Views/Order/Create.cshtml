@{
    ViewData["Title"] = "Lập đơn hàng mới";
}

<div class="row g-4">
    <div class="col-lg-8">
        <!-- Search & Add Products -->
        <div class="card mb-4">
            <div class="card-header bg-white">
                <h3 class="card-title text-dark fw-bold"><i class="bi bi-cart3 me-2 text-primary"></i>Danh sách sản phẩm</h3>
            </div>
            <div class="card-body">
                <!-- Product Search -->
                <div class="mb-4">
                    <div class="input-group input-group-lg shadow-sm rounded">
                        <span class="input-group-text bg-white border-end-0 text-muted"><i class="bi bi-search"></i></span>
                        <input type="text" class="form-control border-start-0 fs-6" placeholder="Tìm tên sản phẩm hoặc mã vạch (Barcode)...">
                        <button class="btn btn-primary px-4 fw-medium" type="button">Tìm kiếm</button>
                    </div>
                    <div class="text-muted small mt-2 ms-1"><i class="bi bi-info-circle me-1"></i>Gợi ý: Nhấn F2 để quét mã nhanh</div>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="bg-light">
                            <tr>
                                <th class="border-0">Sản phẩm</th>
                                <th class="text-center border-0" style="width: 140px;">Số lượng</th>
                                <th class="text-end border-0" style="width: 140px;">Đơn giá</th>
                                <th class="text-end border-0" style="width: 140px;">Thành tiền</th>
                                <th class="text-end border-0" style="width: 50px;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="product-row">
                                <td class="py-3">
                                    <div class="d-flex align-items-center">
                                        <img src="https://picsum.photos/id/160/100/100" class="rounded me-3 border" style="width: 48px; height: 48px; object-fit: cover;" alt="">
                                        <div>
                                            <div class="fw-bold text-dark mb-0">iPhone 15 Pro Max</div>
                                            <div class="text-muted small">256GB - Blue Titanium</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="input-group input-group-sm quantity-control shadow-sm">
                                        <button class="btn btn-light border px-2" type="button">-</button>
                                        <input type="text" class="form-control text-center bg-white" value="1" readonly>
                                        <button class="btn btn-light border px-2" type="button">+</button>
                                    </div>
                                </td>
                                <td class="text-end fw-medium text-dark">32.990.000₫</td>
                                <td class="text-end fw-bold text-primary">32.990.000₫</td>
                                <td class="text-end">
                                    <button class="btn btn-link text-danger p-0 border-0" title="Xóa"><i class="bi bi-trash"></i></button>
                                </td>
                            </tr>
                            <tr class="product-row border-bottom-0">
                                <td class="py-3">
                                    <div class="d-flex align-items-center">
                                        <img src="https://picsum.photos/id/2/100/100" class="rounded me-3 border" style="width: 48px; height: 48px; object-fit: cover;" alt="">
                                        <div>
                                            <div class="fw-bold text-dark mb-0">MacBook Pro M3</div>
                                            <div class="text-muted small">14 inch - 16GB RAM</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="input-group input-group-sm quantity-control shadow-sm">
                                        <button class="btn btn-light border px-2" type="button">-</button>
                                        <input type="text" class="form-control text-center bg-white" value="2" readonly>
                                        <button class="btn btn-light border px-2" type="button">+</button>
                                    </div>
                                </td>
                                <td class="text-end fw-medium text-dark">45.000.000₫</td>
                                <td class="text-end fw-bold text-primary">90.000.000₫</td>
                                <td class="text-end">
                                    <button class="btn btn-link text-danger p-0 border-0" title="Xóa"><i class="bi bi-trash"></i></button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="text-center py-5 bg-light rounded-3 border-dashed mt-3">
                    <div class="text-muted">
                        <i class="bi bi-cart-plus h2 mb-3 d-block opacity-25"></i>
                        <p class="mb-0">Chưa có sản phẩm nào được chọn.</p>
                        <small>Vui lòng tìm kiếm phía trên để thêm sản phẩm vào đơn hàng.</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Notes -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0 py-3">
                <h3 class="card-title text-dark fw-bold mb-0">Ghi chú & Chỉ dẫn</h3>
            </div>
            <div class="card-body pt-0">
                <textarea class="form-control border-light-subtle bg-light bg-opacity-25" rows="4" placeholder="Nhập ghi chú giao hàng, yêu cầu đặc biệt của khách hàng..."></textarea>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <!-- Professional Customer Search & Select -->
        <div class="card border-0 shadow-sm mb-4 overflow-hidden">
            <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
                <h3 class="card-title text-dark fw-bold mb-0">Khách hàng</h3>
                <button type="button" class="btn btn-link btn-sm text-decoration-none p-0" data-bs-toggle="modal" data-bs-target="#modalSearchCustomer">
                    <i class="bi bi-search me-1"></i>Tìm kiếm
                </button>
            </div>
            
            <div class="card-body pt-0">
                <!-- Selected Customer Display (Standard UI/UX) -->
                <div class="selected-customer-box p-3 border rounded-3 bg-primary bg-opacity-10 border-primary-subtle border-dashed">
                    <div class="d-flex align-items-start">
                        <div class="avatar-md bg-white border rounded shadow-sm text-primary d-flex align-items-center justify-content-center me-3" style="width: 48px; height: 48px; font-size: 1.25rem;">
                            <i class="bi bi-person-check-fill"></i>
                        </div>
                        <div class="flex-grow-1 overflow-hidden">
                            <div class="fw-bold text-dark text-truncate mb-0">Phan Bá Đủ</div>
                            <div class="text-muted small mb-2">090 123 4567</div>
                            <div class="d-flex gap-2">
                                <button type="button" class="btn btn-white btn-xs border shadow-xs px-2 py-1 small rounded-pill" style="font-size: 0.75rem;">Thay đổi</button>
                                <button type="button" class="btn btn-link btn-xs text-danger p-0 small text-decoration-none" style="font-size: 0.75rem;">Gỡ bỏ</button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Empty State for Customer (If not selected) -->
                <div class="text-center py-4 d-none">
                    <div class="mb-3 text-muted opacity-50"><i class="bi bi-person-plus h1"></i></div>
                    <button type="button" class="btn btn-outline-primary w-100 mb-2" data-bs-toggle="modal" data-bs-target="#modalSearchCustomer">
                        <i class="bi bi-search me-2"></i>Tìm khách hàng
                    </button>
                    <a href="~/Customer/Create" target="_blank" class="text-muted small"><i class="bi bi-plus-lg me-1"></i>Tạo khách hàng mới</a>
                </div>

                <!-- Shipping Address -->
                <div class="mt-4">
                    <label class="form-label small fw-bold text-uppercase text-muted">Địa chỉ nhận hàng</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white text-muted border-end-0"><i class="bi bi-geo-alt"></i></span>
                        <textarea class="form-control border-start-0 ps-0" rows="2" style="font-size: 0.875rem;">Số 123, Đường Thành Thái, Quận 10, TP. Hồ Chí Minh</textarea>
                    </div>
                </div>

                <div class="mt-3">
                    <label class="form-label small fw-bold text-uppercase text-muted">Hình thức vận chuyển</label>
                    <div class="d-flex gap-2">
                        <input type="radio" class="btn-check" name="shippingType" id="shipping1" checked>
                        <label class="btn btn-outline-primary btn-sm flex-grow-1 border-light-subtle shadow-sm p-2" for="shipping1">
                            <i class="bi bi-truck d-block h5 mb-1"></i> Giao hàng
                        </label>
                        <input type="radio" class="btn-check" name="shippingType" id="shipping2">
                        <label class="btn btn-outline-primary btn-sm flex-grow-1 border-light-subtle shadow-sm p-2" for="shipping2">
                            <i class="bi bi-shop d-block h5 mb-1"></i> Tại quầy
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <!-- Checkout Summary (Premium Look) -->
        <div class="card border-0 shadow mb-4 checkout-card">
            <div class="card-body p-4">
                <h4 class="fw-bold mb-4 text-dark">Thanh toán</h4>
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted">Tạm tính (3 sản phẩm)</span>
                    <span class="fw-medium text-dark">122,990,000₫</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted">Phí vận chuyển</span>
                    <div class="text-end">
                        <span class="text-success fw-medium d-block">Miễn phí</span>
                        <small class="text-muted" style="text-decoration: line-through; font-size: 0.75rem;">30.000₫</small>
                    </div>
                </div>
                <div class="d-flex justify-content-between mb-4">
                    <span class="text-muted">Ưu đãi giảm giá</span>
                    <span class="text-danger fw-medium">-0₫</span>
                </div>
                
                <div class="bg-light p-3 rounded-3 mb-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="fw-bold text-dark h5 mb-0">Tổng cộng</span>
                        <span class="fw-bold text-primary h3 mb-0">122.990.000₫</span>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-3 fw-bold shadow position-relative overflow-hidden btn-checkout mb-3">
                    <i class="bi bi-check2-circle me-2 h5 mb-0 align-middle"></i>
                    XÁC NHẬN TẠO ĐƠN HÀNG
                </button>
                <div class="text-center">
                    <a href="~/Order" class="text-muted small text-decoration-none ho-link">
                        <i class="bi bi-arrow-left me-1"></i>Quay lại danh sách
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Search Customer (Professional Search Component) -->
<div class="modal fade" id="modalSearchCustomer" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg" style="border-radius: 1rem;">
            <div class="modal-header border-bottom-0 pb-1">
                <h5 class="modal-title fw-bold">Tìm kiếm khách hàng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="input-group mb-4 shadow-sm rounded-pill">
                    <span class="input-group-text bg-white border-end-0 ps-3 text-muted rounded-start-pill"><i class="bi bi-search"></i></span>
                    <input type="text" class="form-control border-start-0 py-2 fs-6 rounded-end-pill" placeholder="Nhập tên, SĐT hoặc mã KH...">
                </div>

                <div class="customer-results">
                    <div class="small fw-bold text-uppercase text-muted mb-3">Kết quả tìm kiếm</div>
                    
                    <div class="list-group list-group-flush gap-2">
                        <a href="javascript:void(0)" class="list-group-item list-group-item-action border rounded-3 p-3 d-flex align-items-center" onclick="$('#modalSearchCustomer').modal('hide')">
                            <div class="avatar-sm bg-light rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 36px; height: 36px;">
                                <i class="bi bi-person"></i>
                            </div>
                            <div class="flex-grow-1">
                                <div class="fw-bold text-dark">Phan Bá Đủ</div>
                                <div class="text-muted small">090 123 4567 • TP. Hồ Chí Minh</div>
                            </div>
                            <i class="bi bi-chevron-right text-muted small"></i>
                        </a>
                        <a href="javascript:void(0)" class="list-group-item list-group-item-action border rounded-3 p-3 d-flex align-items-center" onclick="$('#modalSearchCustomer').modal('hide')">
                            <div class="avatar-sm bg-light rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 36px; height: 36px;">
                                <i class="bi bi-person"></i>
                            </div>
                            <div class="flex-grow-1">
                                <div class="fw-bold text-dark">Nguyễn Văn A</div>
                                <div class="text-muted small">098 877 7666 • Hà Nội</div>
                            </div>
                            <i class="bi bi-chevron-right text-muted small"></i>
                        </a>
                    </div>

                    <div class="text-center mt-4 pt-2 border-top">
                        <a href="~/Customer/Create" class="text-primary fw-medium text-decoration-none small">
                            <i class="bi bi-person-plus me-1"></i>Tạo nhanh khách hàng mới
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .border-dashed { border-style: dashed !important; border-width: 2px !important; }
        .checkout-card { border-radius: 1.25rem !important; }
        .btn-checkout {
            border-radius: 0.75rem !important;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
        }
        .btn-checkout:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 15px rgba(24, 24, 27, 0.15);
        }
        .quantity-control .form-control { width: 40px !important; max-width: 40px !important; }
        .ho-link:hover { color: var(--primary) !important; }
        .btn-xs { padding: 4px 8px; font-size: 0.75rem; }
        .shadow-xs { box-shadow: 0 1px 2px rgba(0,0,0,0.05); }
    </style>
}

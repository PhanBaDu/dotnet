@{
    ViewData["Title"] = "Quản lý đơn hàng";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="card-title">Danh sách đơn hàng</h3>
        <a href="~/Order/Create" class="btn btn-primary btn-sm">
            <i class="bi bi-cart-plus me-1"></i> Lập đơn hàng mới
        </a>
    </div>
    <div class="card-body">
        <!-- Filter Form -->
        <form action="" method="get" class="mb-4">
            <div class="row g-3">
                <div class="col-md-5">
                    <label class="form-label text-muted small fw-bold text-uppercase">Tìm kiếm</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0 text-muted"><i class="bi bi-search"></i></span>
                        <input type="text" name="searchValue" class="form-control border-start-0" placeholder="Mã đơn hàng, tên khách hàng...">
                    </div>
                </div>
                <div class="col-md-4">
                    <label class="form-label text-muted small fw-bold text-uppercase">Trạng thái</label>
                    <select class="form-select" name="status">
                        <option value="">-- Tất cả trạng thái --</option>
                        <option value="1">Vừa đặt (Chờ duyệt)</option>
                        <option value="2">Đã duyệt (Chờ giao hàng)</option>
                        <option value="3">Đang giao hàng</option>
                        <option value="4">Thành công (Đã kết thúc)</option>
                        <option value="5">Đã hủy</option>
                        <option value="6">Bị từ chối</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label text-muted small fw-bold text-uppercase">&nbsp;</label>
                    <button type="submit" class="btn btn-primary w-100">Lọc kết quả</button>
                </div>
            </div>
        </form>

        <!-- Order Table -->
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th style="width: 120px;">Mã đơn</th>
                        <th>Khách hàng</th>
                        <th>Ngày đặt</th>
                        <th class="text-end">Tổng tiền</th>
                        <th class="text-center">Trạng thái</th>
                        <th class="text-end">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 1; i <= 8; i++)
                    {
                        var status = i % 5;
                        <tr>
                            <td class="fw-bold text-dark">#ORD-@(1000 + i)</td>
                            <td>
                                <div class="fw-medium">Nguyễn Văn Khách @i</div>
                                <div class="text-muted small">090 888 77@(i)</div>
                            </td>
                            <td class="small text-muted">
                                @DateTime.Now.AddDays(-i).ToString("HH:mm dd/MM/yyyy")
                            </td>
                            <td class="text-end fw-bold text-dark">
                                @((i * 450000).ToString("N0"))₫
                            </td>
                            <td class="text-center">
                                @switch(status) {
                                    case 1: <span class="badge text-bg-warning-subtle text-warning border border-warning-subtle">Chờ duyệt</span> break;
                                    case 2: <span class="badge text-bg-info-subtle text-info border border-info-subtle">Chờ giao</span> break;
                                    case 3: <span class="badge text-bg-primary-subtle text-primary border border-primary-subtle">Đang giao</span> break;
                                    case 4: <span class="badge text-bg-success-subtle text-success border border-success-subtle">Thành công</span> break;
                                    default: <span class="badge text-bg-danger-subtle text-danger border border-danger-subtle">Đã hủy</span> break;
                                }
                            </td>
                            <td class="text-end">
                                <a href="~/Order/Detail/@i" class="btn btn-sm btn-light border" title="Xem chi tiết">
                                    <i class="bi bi-box-arrow-up-right me-1"></i> Chi tiết
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="d-flex align-items-center justify-content-between mt-4">
            <div class="text-muted small">Hiển thị dữ liệu tĩnh mẫu cho đơn hàng</div>
            <nav>
                <ul class="pagination pagination-sm mb-0">
                    <li class="page-item disabled"><a class="page-link" href="#"><i class="bi bi-chevron-left"></i></a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#"><i class="bi bi-chevron-right"></i></a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>

@{
    ViewData["Title"] = "Sửa thuộc tính sản phẩm";
}

<div class="card card-warning card-outline mb-4">
    <div class="card-header">
        <h3 class="card-title">Sửa thuộc tính cho sản phẩm: <strong>Sản phẩm 1</strong></h3>
    </div>
    <form onsubmit="event.preventDefault()">
        <div class="card-body">
            <div class="mb-3">
                <label for="attributeName" class="form-label">Tên thuộc tính: <span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="attributeName" name="attributeName" value="Thuộc tính 1" required>
            </div>

            <div class="mb-3">
                <label for="attributeValue" class="form-label">Giá trị: <span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="attributeValue" name="attributeValue" value="Giá trị 1" required>
            </div>

            <div class="mb-3">
                <label for="displayOrder" class="form-label">Thứ tự hiển thị:</label>
                <input type="number" class="form-control" id="displayOrder" name="displayOrder" value="1" min="1">
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-warning">
                <i class="bi bi-save"></i> Cập nhật
            </button>
            <a href="~/Product/ListAttributes/1" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> Hủy bỏ
            </a>
        </div>
    </form>
</div>

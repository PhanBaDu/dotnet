@{
    ViewData["Title"] = "Quản lý mặt hàng";
}

<div class="card card-primary card-outline mb-4">
    <div class="card-header">
        <h3 class="card-title">Danh sách mặt hàng</h3>
    </div>
    <div class="card-body">
        <!-- Search Form -->
        <form action="" method="get">
            <div class="row">
                <div class="col-sm-10">
                    <div class="input-group">
                        <input type="text" name="searchValue" class="form-control" placeholder="Nhập tên mặt hàng cần tìm...">
                        <select class="form-select" name="categoryId" style="max-width: 200px;">
                            <option value="">-- Tất cả loại hàng --</option>
                            <option value="1">Loại hàng 1</option>
                            <option value="2">Loại hàng 2</option>
                            <option value="3">Loại hàng 3</option>
                        </select>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i> Tìm kiếm
                        </button>
                    </div>
                </div>
                <div class="col-sm-2 text-end">
                    <a href="~/Product/Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle-fill"></i> Bổ sung
                    </a>
                </div>
            </div>
        </form>

        <br />

        <!-- Product Table -->
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr class="table-primary">
                        <th style="width: 80px;">Mã SP</th>
                        <th>Tên sản phẩm</th>
                        <th>Loại hàng</th>
                        <th>Nhà cung cấp</th>
                        <th>Giá</th>
                        <th>Trạng thái</th>
                        <th style="width: 200px;">Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 1; i <= 10; i++)
                    {
                        <tr>
                            <td>PRD00@i</td>
                            <td>
                                <a href="~/Product/Detail/@i" class="text-decoration-none">
                                    Sản phẩm @i
                                </a>
                            </td>
                            <td>Loại hàng @((i % 3) + 1)</td>
                            <td>Nhà cung cấp @((i % 5) + 1)</td>
                            <td>@((i * 100000).ToString("N0")) VNĐ</td>
                            <td>
                                @if(i % 2 == 0) {
                                    <span class="badge bg-success">Còn hàng</span>
                                } else {
                                     <span class="badge bg-danger">Hết hàng</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a href="~/Product/Detail/@i" class="btn btn-sm btn-info" title="Chi tiết">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="~/Product/Edit/@i" class="btn btn-sm btn-warning" title="Sửa">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a href="~/Product/ListPhoto/@i" class="btn btn-sm btn-primary" title="Hình ảnh">
                                        <i class="bi bi-images"></i>
                                    </a>
                                    <a href="~/Product/ListAttributes/@i" class="btn btn-sm btn-success" title="Thuộc tính">
                                        <i class="bi bi-list-ul"></i>
                                    </a>
                                    <a href="~/Product/Delete/@i" class="btn btn-sm btn-danger" title="Xóa">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <br />

        <!-- Pagination -->
        <div class="text-center">
            <ul class="pagination justify-content-center">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Trước</a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <span class="page-link">...</span>
                </li>
                <li class="page-item"><a class="page-link" href="#">10</a></li>
                <li class="page-item">
                    <a class="page-link" href="#">Sau</a>
                </li>
            </ul>
        </div>

    </div>
</div>

@{
    ViewData["Title"] = "Quản lý mặt hàng";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="card-title">Danh sách mặt hàng</h3>
        <a href="~/Product/Create" class="btn btn-primary btn-sm">
            <i class="bi bi-plus-lg me-1"></i> Bổ sung
        </a>
    </div>
    <div class="card-body">
        <!-- Search Form -->
        <form action="" method="get" class="mb-4">
            <div class="row g-3">
                <div class="col-md-3">
                    <label class="form-label text-muted small fw-bold text-uppercase">Loại hàng</label>
                    <select class="form-select" name="categoryId">
                        <option value="">Tất cả loại hàng</option>
                        <option value="1">Điện thoại</option>
                        <option value="2">Máy tính</option>
                        <option value="3">Phụ kiện</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label text-muted small fw-bold text-uppercase">Nhà cung cấp</label>
                    <select class="form-select" name="supplierId">
                        <option value="">Tất cả nhà cung cấp</option>
                        <option value="1">Apple Store</option>
                        <option value="2">Samsung Global</option>
                        <option value="3">Sony VN</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label class="form-label text-muted small fw-bold text-uppercase">Tìm kiếm</label>
                    <div class="input-group">
                        <input type="text" name="searchValue" class="form-control" placeholder="Nhập tên mặt hàng cần tìm...">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search me-1"></i> Tìm kiếm
                        </button>
                    </div>
                </div>
            </div>
        </form>

        <!-- Product Table -->
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th style="width: 100px;">Hình ảnh</th>
                        <th>Tên sản phẩm</th>
                        <th>Loại hàng</th>
                        <th>Nhà cung cấp</th>
                        <th class="text-end">Giá</th>
                        <th class="text-center">Trạng thái</th>
                        <th class="text-end">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 1; i <= 8; i++)
                    {
                        <tr>
                            <td>
                                <img src="https://picsum.photos/id/@(i + 10)/100/100" class="rounded border" style="width: 48px; height: 48px; object-fit: cover;" alt="">
                            </td>
                            <td>
                                <div class="fw-bold text-dark">Sản phẩm #@(1000 + i)</div>
                                <div class="text-muted small">Apple Engine Pro</div>
                            </td>
                            <td>Thiết bị điện tử</td>
                            <td>Apple Inc.</td>
                            <td class="text-end fw-semibold text-dark">@((i * 1250000).ToString("N0"))₫</td>
                            <td class="text-center">
                                @if(i % 3 != 0) {
                                    <span class="badge text-bg-success-subtle text-success border border-success-subtle">Sẵn hàng</span>
                                } else {
                                     <span class="badge text-bg-danger-subtle text-danger border border-danger-subtle">Hết hàng</span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-light border" type="button" data-bs-toggle="dropdown">
                                        <i class="bi bi-three-dots"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end shadow-sm border">
                                        <li><a class="dropdown-item" href="~/Product/Detail/@i"><i class="bi bi-eye me-2"></i> Chi tiết</a></li>
                                        <li><a class="dropdown-item" href="~/Product/Edit/@i"><i class="bi bi-pencil me-2"></i> Chỉnh sửa</a></li>
                                        <li><a class="dropdown-item" href="~/Product/ListPhoto/@i"><i class="bi bi-images me-2"></i> Thư viện ảnh</a></li>
                                        <li><a class="dropdown-item text-danger" href="~/Product/Delete/@i"><i class="bi bi-trash me-2"></i> Xóa sản phẩm</a></li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="d-flex align-items-center justify-content-between mt-4">
            <div class="text-muted small">Hiển thị <b>1 - 8</b> trên tổng số <b>64</b> sản phẩm</div>
            <nav>
                <ul class="pagination mb-0">
                    <li class="page-item disabled"><a class="page-link" href="#"><i class="bi bi-chevron-left"></i></a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#"><i class="bi bi-chevron-right"></i></a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>

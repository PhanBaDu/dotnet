@{
    ViewData["Title"] = "Quản lý thuộc tính sản phẩm";
}

<div class="card card-success card-outline mb-4">
    <div class="card-header">
        <h3 class="card-title">Danh sách thuộc tính - Sản phẩm: <strong>Sản phẩm 1</strong></h3>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <a href="~/Product/CreateAttribute/1" class="btn btn-success">
                <i class="bi bi-plus-circle-fill"></i> Thêm thuộc tính
            </a>
            <a href="~/Product/Detail/1" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại sản phẩm
            </a>
        </div>

        <!-- Attributes Table -->
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr class="table-success">
                        <th style="width: 50px;">#</th>
                        <th>Tên thuộc tính</th>
                        <th>Giá trị</th>
                        <th>Thứ tự hiển thị</th>
                        <th style="width: 120px;">Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 1; i <= 5; i++)
                    {
                        <tr>
                            <td>@i</td>
                            <td>Thuộc tính @i</td>
                            <td>Giá trị @i</td>
                            <td>@i</td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a href="~/Product/EditAttribute/1?attributeId=@i" class="btn btn-sm btn-warning" title="Sửa">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a href="~/Product/DeleteAttribute/1?attributeId=@i" class="btn btn-sm btn-danger" title="Xóa">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

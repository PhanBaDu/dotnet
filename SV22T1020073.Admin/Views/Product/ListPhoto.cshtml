@{
    ViewData["Title"] = "Quản lý hình ảnh sản phẩm";
}

<div class="card card-primary card-outline mb-4">
    <div class="card-header">
        <h3 class="card-title">Danh sách hình ảnh - Sản phẩm: <strong>Sản phẩm 1</strong></h3>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <a href="~/Product/CreatePhoto/1" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i> Thêm hình ảnh
            </a>
            <a href="~/Product/Detail/1" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại sản phẩm
            </a>
        </div>

        <!-- Photos Grid -->
        <div class="row">
            @for (int i = 1; i <= 6; i++)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="https://via.placeholder.com/400x300?text=Photo+@i" class="card-img-top" alt="Photo @i">
                        <div class="card-body">
                            <h6 class="card-title">Hình ảnh @i</h6>
                            <p class="card-text">
                                <small class="text-muted">Thứ tự: @i</small>
                                @if(i == 1) {
                                    <br><span class="badge bg-success">Ảnh chính</span>
                                }
                            </p>
                            <div class="btn-group w-100">
                                <a href="~/Product/EditPhoto/1?photoId=@i" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil-square"></i> Sửa
                                </a>
                                <a href="~/Product/DeletePhoto/1?photoId=@i" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Xóa
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

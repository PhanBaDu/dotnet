<!doctype html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewData["Title"] - LiteCommerce</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=yes" />
    <link rel="stylesheet" href="~/lib/overlay-scrollbars/overlayscrollbars.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/lib/adminlte/css/adminlte.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --bs-border-color: #e5e5e5;
            --bs-body-font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            --primary: #18181b;
            --primary-foreground: #ffffff;
            --muted: #f4f4f5;
            --muted-foreground: #71717a;
            --border: #e5e5e5;
            --input: #e5e5e5;
            --radius: 0.5rem;
        }

        body, h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6, p, span, a, input, button, select, textarea {
            font-family: var(--bs-body-font-family) !important;
        }

        /* Layout Tweaks */
        .app-header {
            border-bottom: 1px solid var(--bs-border-color) !important;
            box-shadow: none !important;
            background-color: #ffffff !important;
        }

        .app-sidebar {
            border-right: 1px solid var(--bs-border-color) !important;
            box-shadow: none !important;
            background-color: #ffffff !important;
        }

        .sidebar-brand {
            border-bottom: 1px solid var(--bs-border-color) !important;
        }

        /* Shadcn-like Components */
        .card {
            border: 1px solid var(--border) !important;
            border-radius: var(--radius) !important;
            box-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.05) !important;
            background-color: #fff !important;
        }

        .card-header {
            background-color: transparent !important;
            border-bottom: 1px solid var(--border) !important;
            padding: 1.25rem 1.5rem !important;
        }

        .card-title {
            font-size: 1.125rem !important;
            font-weight: 600 !important;
            color: var(--primary) !important;
        }

        .card-body {
            padding: 1.5rem !important;
        }

        .btn-primary {
            background-color: var(--primary) !important;
            border-color: var(--primary) !important;
            color: var(--primary-foreground) !important;
            font-weight: 500 !important;
            border-radius: var(--radius) !important;
            padding: 0.5rem 1rem !important;
            font-size: 0.875rem !important;
        }

        .btn-primary:hover {
            opacity: 0.9 !important;
        }

        .form-control, .form-select {
            border: 1px solid var(--input) !important;
            border-radius: var(--radius) !important;
            padding: 0.5rem 0.75rem !important;
            font-size: 0.875rem !important;
        }

        .form-control:focus, .form-select:focus {
            border-color: #a1a1aa !important;
            box-shadow: 0 0 0 2px rgba(24, 24, 27, 0.05) !important;
        }

        .table {
            --bs-table-hover-bg: #f9f9fb !important;
            font-size: 0.875rem !important;
        }

        .table thead th {
            background-color: #fafafa !important;
            color: var(--muted-foreground) !important;
            font-weight: 600 !important;
            text-transform: uppercase;
            font-size: 0.75rem !important;
            letter-spacing: 0.05em !important;
            border-bottom: 1px solid var(--border) !important;
            padding: 1rem !important;
        }

        .table tbody td {
            padding: 1rem !important;
            vertical-align: middle !important;
            color: #3f3f46 !important;
            border-bottom: 1px solid var(--border) !important;
        }

        .nav-link.active {
            background-color: #f4f4f5 !important;
            color: #18181b !important;
            font-weight: 600 !important;
            border-radius: var(--radius) !important;
        }

        .nav-link:hover {
            background-color: #f4f4f5 !important;
            color: #18181b !important;
            border-radius: var(--radius) !important;
        }
        
        .brand-text {
            color: #18181b !important;
            font-weight: 700 !important;
        }

        .badge {
            font-weight: 500 !important;
            padding: 0.35em 0.65em !important;
            border-radius: 6px !important;
        }

        .dropdown-menu {
            border: 1px solid var(--border) !important;
            border-radius: var(--radius) !important;
            box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1) !important;
            padding: 0.5rem !important;
            min-width: 200px !important;
            animation: fadeIn 0.2s ease-out;
        }

        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .dropdown-item {
            border-radius: calc(var(--radius) - 2px) !important;
            padding: 0.5rem 0.75rem !important;
            font-size: 0.875rem !important;
            color: var(--primary) !important;
            display: flex !important;
            align-items: center !important;
            gap: 0.75rem !important;
            transition: all 0.1s ease !important;
        }

        .dropdown-item i {
            font-size: 1.1rem;
            color: var(--muted-foreground);
        }

        .dropdown-item:hover {
            background-color: var(--muted) !important;
            color: var(--primary) !important;
        }

        .dropdown-item:hover i {
            color: var(--primary);
        }

        .dropdown-divider {
            margin: 0.25rem -0.5rem !important;
            border-top: 1px solid var(--border) !important;
        }

        /* Global Modal Styling */
        .modal-content {
            border: none !important;
            border-radius: 1rem !important;
            box-shadow: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1) !important;
            overflow: hidden;
        }

        .modal-header {
            border-bottom: 1px solid var(--border) !important;
            padding: 1.25rem 1.5rem !important;
            background-color: #fff;
        }

        .modal-title {
            font-weight: 700 !important;
            color: var(--primary);
        }

        .modal-body {
            padding: 1.5rem !important;
        }

        .modal-footer {
            border-top: 1px solid var(--border) !important;
            padding: 1rem 1.5rem !important;
            background-color: #fafafa;
        }

        .pagination .page-link {
            color: var(--primary) !important;
            border: 1px solid var(--border) !important;
            border-radius: 6px !important;
            margin: 0 2px !important;
            font-size: 0.875rem !important;
        }

        .pagination .page-item.active .page-link {
            background-color: var(--primary) !important;
            border-color: var(--primary) !important;
            color: #fff !important;
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>

<body class="layout-fixed fixed-header fixed-footer sidebar-expand-lg sidebar-open bg-body-tertiary">
    <div class="app-wrapper">

        <!--begin::Header-->
        @{
            await Html.RenderPartialAsync("_Header");
        }
        <!--end::Header-->
        <!--begin::Sidebar-->
        @{
            await Html.RenderPartialAsync("_Sidebar");
        }
        <!--end::Sidebar-->
        <!--begin::App Main-->
        <main class="app-main">
            <!--begin::App Content Header-->
            <div class="app-content-header">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-12">
                            <h3 class="mb-0">@ViewData["Title"]</h3>
                        </div>
                    </div>
                </div>
            </div>
            <!--end::App Content Header-->
            <!--begin::App Content-->
            <div class="app-content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
            <!--end::App Content-->

        </main>
        <!--end::App Main-->
        <!--begin::Footer-->
        @{
            await Html.RenderPartialAsync("_Footer");
        }
        <!--end::Footer-->
    </div>

    <script src="~/lib/overlay-scrollbars/overlayscrollbars.browser.es6.min.js"></script>
    <script src="~/lib/popperjs/popper.min.js"></script>
    <script src="~/lib/bootstrap/bootstrap.bundle.min.js"></script>
    <script type="module" src="~/lib/adminlte/js/adminlte.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>

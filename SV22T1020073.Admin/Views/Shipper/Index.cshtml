@{
    ViewData["Title"] = "Quản lý người giao hàng";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="card-title">Đối tác giao vận (Shippers)</h3>
        <a href="~/Shipper/Create" class="btn btn-primary btn-sm">
            <i class="bi bi-person-plus me-1"></i> Bổ sung Shipper
        </a>
    </div>
    <div class="card-body">
        <form action="" method="get" class="mb-4">
            <div class="input-group">
                <span class="input-group-text bg-white border-end-0 text-muted"><i class="bi bi-truck"></i></span>
                <input type="text" name="searchValue" class="form-control border-start-0" placeholder="Tìm theo tên shipper hoặc số điện thoại...">
                <button type="submit" class="btn btn-primary px-4">Tìm kiếm</button>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th style="width: 250px;">Người giao hàng</th>
                        <th>Số điện thoại</th>
                        <th class="text-center">Số đơn đã giao</th>
                        <th class="text-center">Trạng thái</th>
                        <th class="text-end">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 1; i <= 6; i++)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="avatar-sm me-3 border rounded-circle bg-light d-flex align-items-center justify-content-center text-secondary" style="width: 40px; height: 40px;">
                                        <i class="bi bi-person-fill"></i>
                                    </div>
                                    <div class="fw-bold text-dark">Shipper @(i + 20)</div>
                                </div>
                            </td>
                            <td>
                                <div class="fw-medium">091 122 33@(i)</div>
                                <div class="text-muted small">shipper@(i)@@liteshop.vn</div>
                            </td>
                            <td class="text-center fw-bold">
                                @(i * 15 + 10)
                            </td>
                            <td class="text-center">
                                @if(i % 5 != 0) {
                                    <span class="badge text-bg-success-subtle text-success border border-success-subtle">Sẵn sàng</span>
                                } else {
                                     <span class="badge text-bg-warning-subtle text-warning border border-warning-subtle">Bận</span>
                                }
                            </td>
                            <td class="text-end">
                                <a href="~/Shipper/Edit/@i" class="btn btn-sm btn-light border px-2"><i class="bi bi-pencil"></i></a>
                                <a href="~/Shipper/Delete/@i" class="btn btn-sm btn-light border text-danger px-2"><i class="bi bi-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-4">
            <div class="text-muted small">Hiển thị các đối tác vận chuyển</div>
            <nav>
                <ul class="pagination pagination-sm mb-0">
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>
